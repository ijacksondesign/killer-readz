<section class="dashboard-wrapper">
    <h2>edit post</h2>
    <form class="post-form">
        <div>
            <label for="title">title:</label>
            <input type="text" id="title" value="{{post.title}}" name="title">
        </div>
        <div>
            <label for="author">author:</label>
            <input type="text" id="author" value="{{post.author}}" name="author">
        </div>
        <div>
            <label for="genre">genre:</label>
            <select name="genre" id="genre">
                <option value="">Choose a genre</option>
                <option value="1" {{{setSelected post.genre.id 1}}}>Comedy-Horror</option>
                <option value="2" {{{setSelected post.genre.id 2}}}>Dark-Fantasy</option>
                <option value="3" {{{setSelected post.genre.id 3}}}>Gothic</option>
                <option value="4" {{{setSelected post.genre.id 4}}}>Lovecraftian</option>
                <option value="5" {{{setSelected post.genre.id 5}}}>Paranormal</option>
                <option value="6" {{{setSelected post.genre.id 6}}}>Post-Apocalyptic</option>
                <option value="7" {{{setSelected post.genre.id 7}}}>Psychological</option>
                <option value="8" {{{setSelected post.genre.id 8}}}>Sci-Fi Horror</option>
                <option value="9" {{{setSelected post.genre.id 9}}}>Slasher</option>
                <option value="10" {{{setSelected post.genre.id 10}}}>Supernatural</option>
                <option value="11" {{{setSelected post.genre.id 11}}}>Other</option>
            </select>
        </div>
        <div>
            <label for="text">text:</label>
            <textarea name="text" id="text">{{post.post_text}}</textarea>
        </div>
        <button type="submit" class="btn-submit">save post</button>
        <button type="button" class="btn-delete">delete post</button>
    </form>
</section>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>